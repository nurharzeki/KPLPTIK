<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListKHSSemesterMahasiswa">

    <TextView
        android:id="@+id/KhsSemester"
        android:layout_width="160dp"
        android:layout_height="26dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Kartu Hasil Studi"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ipk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="IPK : 0.00"
        app:layout_constraintEnd_toEndOf="@+id/KhsSemester"
        app:layout_constraintStart_toStartOf="@+id/KhsSemester"
        app:layout_constraintTop_toBottomOf="@+id/KhsSemester" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListKhsSemester"
        android:layout_width="357dp"
        android:layout_height="578dp"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/list_khs_semester_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipk" />
</androidx.constraintlayout.widget.ConstraintLayout>