<!--            app:layout_constraintTop_toBottomOf="@+id/semesterView" />-->

        <TextView
            android:id="@+id/textsks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins"
            android:text="SKS"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sksTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/poppins"
            android:text="24"
            android:textColor="#000000"
            app:layout_constraintEnd_toStartOf="@+id/textsks"
            app:layout_constraintTop_toTopOf="@+id/textsks" />

        <TextView
            android:id="@+id/ips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins"
            android:text="0.00"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textsks"
            app:layout_constraintTop_toBottomOf="@+id/textsks" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="28dp"
            android:layout_height="21dp"
            android:layout_marginEnd="4dp"
            android:text="IPS :"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/ips"
            app:layout_constraintEnd_toStartOf="@+id/ips"
            app:layout_constraintTop_toTopOf="@+id/ips"
            app:layout_constraintVertical_bias="0.333" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>